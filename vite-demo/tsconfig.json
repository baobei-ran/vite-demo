{
    "include": ["./**/*.ts", "src/router/index.ts"],
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ES2020",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
          "@/*": ["src/*"],
          "components/*": ["src/components/*"],
          "views/*": ["src/views/*"],
          "utils/*": ["src/utils/*"],
          "assets/*": ["src/assets/*"]
        }
    }
}